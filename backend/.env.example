# Git Platform Configuration
# Supported platforms: github, gitlab, gitea
GIT_PLATFORM=github

# Git credentials and repository info
GIT_TOKEN=your_git_access_token
GIT_OWNER=your_username_or_organization
GIT_REPO=your_repository_name
GIT_PATH=path/to/markdown/files

# For GitLab/Gitea self-hosted instances (optional)
# Only needed if using GitLab/Gitea on a custom domain
# GIT_BASE_URL=https://gitlab.example.com
# GIT_BASE_URL=https://gitea.example.com

# Platform-specific examples:
# 
# GitHub (github.com):
# GIT_PLATFORM=github
# GIT_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
# GIT_OWNER=myusername
# GIT_REPO=my-agents
# 
# GitLab (gitlab.com):
# GIT_PLATFORM=gitlab
# GIT_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx
# GIT_OWNER=myusername
# GIT_REPO=my-agents
# 
# GitLab Self-hosted:
# GIT_PLATFORM=gitlab
# GIT_BASE_URL=https://gitlab.mycompany.com
# GIT_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx
# GIT_OWNER=myusername
# GIT_REPO=my-agents
# 
# Gitea:
# GIT_PLATFORM=gitea
# GIT_BASE_URL=https://gitea.mycompany.com
# GIT_TOKEN=your_gitea_token
# GIT_OWNER=myusername
# GIT_REPO=my-agents

# OIDC Authentication Configuration
# Set to 'true' to enable OIDC authentication
OIDC_ENABLED=false

# OIDC Provider Configuration
# Example for Keycloak:
OIDC_ISSUER_URL=https://keycloak.example.com/realms/your-realm
OIDC_CLIENT_ID=ghmd-editor
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URI=http://localhost:5173/auth/callback

# Other OIDC provider examples:
# 
# Auth0:
# OIDC_ISSUER_URL=https://your-tenant.auth0.com
# OIDC_CLIENT_ID=your-auth0-client-id
# OIDC_CLIENT_SECRET=your-auth0-client-secret
# 
# Azure AD:
# OIDC_ISSUER_URL=https://login.microsoftonline.com/your-tenant-id/v2.0
# OIDC_CLIENT_ID=your-azure-client-id
# OIDC_CLIENT_SECRET=your-azure-client-secret

# Schema Repository Configuration
# Set to 'true' to enable remote schema repository
SCHEMA_REPO_ENABLED=true

# Repository access method: 'git' (recommended) or 'api' (fallback)
SCHEMA_REPO_TYPE=git

# Whether to fallback to local schemas if remote repository fails
SCHEMA_LOCAL_FALLBACK=true

# Cache timeout in seconds (default: 5 minutes)
SCHEMA_CACHE_TIMEOUT=300

# Git-based Schema Repository (recommended approach)
# Direct Git repository URL for cloning
SCHEMA_GIT_URL=https://github.com/your_username_or_organization/agent-schemas.git

# Pull interval in seconds (default: 300 = 5 minutes)
SCHEMA_PULL_INTERVAL=300

# Use shallow clone for better performance (default: true)
SCHEMA_SHALLOW_CLONE=true

# Auto cleanup old repository copies (default: true)
SCHEMA_AUTO_CLEANUP=true

# API-based Schema Repository (fallback method)
# Only used if SCHEMA_REPO_TYPE=api or Git method fails
SCHEMA_GIT_PLATFORM=github
SCHEMA_GIT_TOKEN=your_git_access_token
SCHEMA_GIT_OWNER=your_username_or_organization
SCHEMA_GIT_REPO=agent-schemas
# SCHEMA_GIT_BASE_URL=https://gitlab.example.com  # For self-hosted instances

# Namespace Configuration
# Set to 'true' to enable namespace-based access control
NAMESPACE_ENABLED=false
DEFAULT_NAMESPACE=shared

# Server configuration
PORT=3001